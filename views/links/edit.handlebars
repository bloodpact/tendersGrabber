<h1>Edit Links</h1>
{{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<div class="card card-body">
    <h3>
      Edit  Links
    </h3>
    <form action="/links/{{link.id}}?_method=PUT" method="post">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <label for="word">Word to parse</label>
            <input type="text" value="{{link.wordFind}}" class="form-control" name="wordFind" >
        </div>
        <div class="form-group">
            <label for="link">Link</label>
            <textarea  type="text" class="form-control" name="link" >{{link.link}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<script>
function xmlPartHTML(arr){
    arr.reduce(function (previousValue, currentValue, i, array) {
        fragment = ($.parseHTML(currentValue.textContent));
        for (k in fragment){
            const elem = document.createElement('p');
            elem.textContent = fragment[k].textContent;
            if (fragment[k].textContent !==''){
                document.querySelectorAll('.xmlParsed')[i].appendChild(elem)
            }
         }
        $('.xml').remove();
        for (let k = 0 ; k <= 6 ; k++){
            document.querySelectorAll('.xmlParsed')[i].removeChild( document.querySelectorAll('.xmlParsed')[i].firstChild)
        }
    }, 0)
}
xmlPartHTML(Array.from($('.xml')))
</script>
